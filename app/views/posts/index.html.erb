<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Location</th>
      <th>Jobdescription</th>
      <th>Experience</th>
      <th>Designation</th>
      <th>Role</th>
      <th>Rolecategory</th>
      <th>Educationqualification</th>
      <th>Jobspecification</th>
      <th>Candidatedetails</th>
      <th>Contactdetails</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.company %></td>
        <td><%= post.location %></td>
        <td><%= post.jobdescription %></td>
        <td><%= post.experience %></td>
        <td><%= post.designation %></td>
        <td><%= post.role %></td>
        <td><%= post.rolecategory %></td>
        <td><%= post.educationqualification %></td>
        <td><%= post.jobspecification %></td>
        <td><%= post.candidatedetails %></td>
        <td><%= post.contactdetails %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

